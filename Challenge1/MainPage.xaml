<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   x:Class="Challenge1.MainPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="20, 40, 20, 20" />
            <On Platform="Android, WinPhone, Windows" Value="20" />
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout>
      <Label Text="Enter an Artist:" />
      <Entry x:Name="Artist" Text="" />
      <Label Text="Enter a Track Name" />
      <Entry x:Name="TrackName" Text="" />
      <Label Text="Enter an Genre:" />
      <Entry x:Name="Genre" Text="" />
      <Label Text="Enter Track Length:" />
      <Entry x:Name="Length" Text="" />
      <Button x:Name="Addsong" Text="Add" Clicked="Added" />
    </StackLayout>
</ContentPage>